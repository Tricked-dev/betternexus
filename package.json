{
  "name": "betternexus",
  "displayName": "BetterNexus",
  "version": "0.1.3",
  "description": "Improve the Nexus mods website with a quick download button and automatic downloads.",
  "author": "Tricked-dev <tricked@tricked.pro>",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "package": "plasmo package",
    "build:chrome": "pnpm plasmo build --zip --target=chrome-mv3",
    "build:firefox": "pnpm plasmo build --zip --target=firefox-mv2",
    "build:edge": "pnpm plasmo build --zip --target=edge-mv3",
    "build:brave": "pnpm plasmo build --zip --target=brave-mv3",
    "build:opera": "pnpm plasmo build --zip --target=opera-mv3",
    "build:safari": "pnpm plasmo build --zip --target=safari-mv3",
    "build": "concurrently -n w: pnpm:build:*"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.4.3",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@gatsbyjs/reach-router": "^2.0.0",
    "@plasmohq/storage": "^0.13.0",
    "framer-motion": "^7.6.19",
    "plasmo": "0.59.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.7.1",
    "react-textarea-autosize": "^8.4.0",
    "wouter": "^2.9.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.0",
    "@types/chrome": "0.0.203",
    "@types/node": "18.11.12",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "concurrently": "^7.6.0",
    "prettier": "2.8.1",
    "typescript": "4.9.4"
  },
  "manifest": {
    "host_permissions": [
      "https://www.nexusmods.com/*"
    ],
    "default_locale": "en",
    "permissions": [
      "scripting",
      "activeTab"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "better.nexus@tricked.dev",
        "strict_min_version": "80.0"
      }
    }
  }
}
